<div class="container">
  <div class="d-flex justify-content-between align-items-center pt-5 pb-5">
    <h1 class="text-light">BLA BLA BLA</h1>
    <%= link_to "Anunciar um produto", new_user_product_path(@user), class: "btn btn-success" %>
  </div>
  <ul class="row list-unstyled">
    <% @products.each do |product| %>
      <li class="col-6">
        <% if product.image.attached? %>
          <%= cl_image_tag product.image.key, width: 200 %>
        <% else %>
          <%= image_tag 'https://camo.githubusercontent.com/e7260310f5d1a8a9473a908e039f348a459078b0ba1876d12fbe0a26c8a0e1a7/68747470733a2f2f7a7562652e696f2f66696c65732f706f722d756d612d626f612d63617573612f33363664616462316461323032353338616531333332396261333464393030362d696d6167652e706e67', width: 200 %> <!-- ou uma imagem padrÃ£o -->
        <% end %>
        <h2><%= product.name %></h2>
        <p>Marca: <%= product.brand %></p>
        <p>R$ <%= product.price %></p>
        <%= link_to "Editar Anuncio", edit_user_product_path(@user, product), class:"btn btn-danger text-light rounded-4" %>
        <%= link_to "Deletar Anuncio", user_product_path(@user, product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger text-light rounded-4" %>
      </li>
    <% end %>
  </ul>
</div>
