<div class="container">
  <h2 class="text-center mt-3 mb-3">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.label :nome %>
      <%= f.text_field :nome, class: "form-control" %>

      <%= f.input :sobrenome,
                  required: true,
                  autofocus: true,
                  input_text: { autocomplete: "sobrenome" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions mb-3 d-flex align-items-center justify-content-between">
      <%= f.button :submit, "Sign up", class: "btn btn-danger text-light rounded-4 m-0" %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-danger text-light rounded-4" %>
    </div>

  <% end %>

</div>
