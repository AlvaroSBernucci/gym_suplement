<div class="container mt-5">
  <h2 class="mb-4 text-center">Log in</h2>
<div class="edit-form p-4">
  <div class="p-2">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs input-border">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-danger rounded-4 text-light" %>
        </div>
      <% end %>



      <div class="text-center mt-3 d-flex align-items-center gap-2">
        <%= link_to 'Recuperar senha', new_user_password_path, class: 'btn btn-danger text-light rounded-4' %>
        <%= link_to "Registrar-se", new_user_registration_path, class: "btn btn-danger text-light rounded-4" %>
      </div>
    </div>
  </div>
</div>
