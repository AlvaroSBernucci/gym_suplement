<div class="container container-new-form">
  <h1 class="text-center mt-3 mb-3">Anunciar produto</h1>
  <div class="edit-form new-form p-3 rounded-4">
    <%= simple_form_for [@user, @product], html: { multipart: true }, class:"teste-form" do |f| %>
      <%= f.input :category, label: "Categoria", as: :select, collection: ['Proteínas', 'Vegano', 'Vegetarianos', 'Termogênicos', 'Vitaminas', 'Clinical', 'Aminoácidos', 'Carboidratos'], prompt: 'Selecione um produto' %>
      <%= f.input :name, label: "Nome do produto", as: :select, collection: ['Whey Protein', 'Creatina', 'Pré-Treino', 'Barra de Proteina', 'Beta Alanina', 'Albumina', "BCAA's"], prompt: 'Selecione um produto' %>
      <%= f.input :brand, label: "Marca", as: :select, collection: [ "Growth Supplements", "Max Titanium", "Integralmedica", "Black Skull", "Atlhetica Nutrition", "New Millen", "Optimum Nutrition", "Adaptogen", "Under Labz", "Dux Nutrition", "Vitafor", "Universal Nutrition", "Now Foods", "Puravida", "FTW"]  %>
      <%= f.input :flavor, label: "Sabor", as: :select, collection: [ "Morango", "Chocolate", "Baunilha", "Limão", "Maracujá", "Brigadeiro"]  %>
      <%= f.input :weight, label: "Peso" %>
      <%= f.input :price, label: "Preço" %>
      <%= f.input :stock, label: "Estoque" %>
      <%= f.input :image, label:"Imagem", as: :file %>
      <div class="d-flex justify-content-between">
        <%= f.submit "Anunciar Produto", class: "btn btn-danger rounded-4 text-light" %>
        <%= link_to "Meus anúncios", user_path(@user), class: "btn btn-danger rounded-4 text-light" %>
      </div>
    <% end %>
  </div>
</div>
